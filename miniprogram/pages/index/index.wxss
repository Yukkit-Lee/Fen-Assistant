.box {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.wsui-btn__hover_list {
  opacity: 0.9;
  transform: scale(0.95, 0.95);
}

.button {
  position: relative;
  height: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button .circle {
  width: 200px;
  height: 200px;
  border: 4px solid white;
  border-radius: 50%;
  background:#0077ff;
  box-shadow: 0px 0px 10px white;
}
.button .circleTrans{
  width: 200px;
  height: 200px;
  border: 4px solid white;
  border-radius: 50%;
  background:#ff461f;
  box-shadow: 0px 0px 10px white;
}

.button .text {
  font-family: "腾讯W7";
  font-weight: 500;
  font-size: 70rpx;
  position: absolute;
  color: white;
}

.button .time {
  font-size: 27rpx;
  position: absolute;
  bottom: 50px;
  color: #707070;
}

.swit{
  display: flex;
  flex-direction:row;
  align-items: center;
}

.button .times {
  font-family: "BBold";
  font-size: 27rpx;
  position: absolute;
  right: 80px;

}


